# Staging Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=staging
NEXT_PUBLIC_API_URL=https://api-staging.yourcompany.com/api
NEXT_PUBLIC_APP_NAME=Invoice Manager (Staging)
NEXT_PUBLIC_APP_VERSION=2.1.0-staging

# Database
DATABASE_URL=postgresql://staging-db.yourcompany.com:5432/invoice_staging

# Email Service
EMAIL_SERVICE_URL=https://email-staging.yourcompany.com

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Staging specific
NEXT_PUBLIC_STAGING_BANNER=true

# MySQL Database Configuration
DB_HOST=staging-db.yourcompany.com
DB_PORT=3306
DB_USER=staging_user
DB_PASSWORD=staging_password
DB_NAME=invoice_staging

# JWT Configuration
JWT_SECRET=staging-jwt-secret-key-make-it-very-long-and-random
JWT_REFRESH_SECRET=staging-refresh-secret-key-make-it-very-long-and-random